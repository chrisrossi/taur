<!DOCTYPE html>
<html metal:use-macro="main_template">
    <metal:block fill-slot="page-content">
        <!-- Body -->
        <div class="container-fluid">
            <a href="#add-site-modal" role="button" class="btn"
               data-toggle="modal">Add Site</a>
            <table>
                <tr>
                    <td>Example 1</td>
                    <td>button1 button2</td>
                </tr>
                <tr>
                    <td>Example 2</td>
                    <td>button1 button2</td>
                </tr>
                <tr tal:repeat="site sites">
                    <td>${site}</td>
                    <td>button1 button2</td>
                </tr>
            </table>
        </div>

        <!-- Add Site Popover -->
        <div class="modal hide fade" id="add-site-modal">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" 
                        aria-hidden="true">&times;</button>
                <h3>Add Site</h3>
            </div>
            <form>
                <div class="modal-body">
                    <fieldset>
                        <input type="text" placeholder="Business name"
                               name="name"/>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn" data-dismiss="modal" 
                       aria-hidden="true">Close</a>
                    <a href="#" class="btn btn-primary">Create Site</a>
                </div>
            </form>
        </div>
    </metal:block>
</html>
